{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jargon",
  "version": "0.1.0",
  "identifier": "toddie.org/jargon",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "powershell -ExecutionPolicy Bypass -File scripts/download-model.ps1 && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "jargon",
        "width": 1000,
        "height": 780,
        "minWidth": 1000,
        "minHeight": 780,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../data/parakeet_model/*": "data/parakeet_model/",
      "../python/*.py": "python/"
    }
  }
}